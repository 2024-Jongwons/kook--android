<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grayGray_1000"
    >
<!--    android:paddingVertical="14dp"
    android:paddingHorizontal="25dp"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/voucher_image"
            android:layout_width="102dp"
            android:layout_height="102dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/company_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/pretendardmedium"
            android:text="Costco"
            android:textColor="@color/grayGray_700"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/voucher_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/voucher_name"
            />
        <TextView
            android:id="@+id/voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/pretendardmedium"
            android:text="[Costco] Buldak"
            android:textColor="@color/grayGray_200"
            app:layout_constraintStart_toStartOf="@id/company_text"
            app:layout_constraintTop_toBottomOf="@id/company_text"
            app:layout_constraintBottom_toBottomOf="@id/voucher_point"
            />
        <TextView
            android:id="@+id/voucher_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/pretendardmedium"
            android:text="3,500"
            android:textColor="@color/neonGreen"
            app:layout_constraintStart_toStartOf="@id/company_text"
            app:layout_constraintTop_toBottomOf="@id/voucher_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/voucher_point_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/pretendardmedium"
            android:text=" ðŸ…Ÿ"
            android:textColor="@color/grayGray_200"
            app:layout_constraintStart_toEndOf="@id/voucher_point"
            app:layout_constraintTop_toTopOf="@id/voucher_point"
            app:layout_constraintBottom_toBottomOf="@id/voucher_point"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayGray_900"
        app:layout_constraintTop_toTopOf="@id/info_layout"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayGray_900"
        app:layout_constraintBottom_toBottomOf="@id/info_layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>