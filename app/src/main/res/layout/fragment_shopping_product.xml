<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ShoppingProductFragment"
    android:background="@color/grayGray_1000">
    <ImageView
        android:id="@+id/back_arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="17dp"
        android:paddingHorizontal="20dp"
        android:src="@drawable/ic_back_arrow"
        />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_image"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        />

    <TextView
        android:id="@+id/company_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/pretendardmedium"
        android:text="Costco"
        android:textColor="@color/grayGray_700"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/voucher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardmedium"
        android:text="[Costco] Buldak"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/company_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/voucher_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardmedium"
        android:text="3,500"
        android:textColor="@color/neonGreen"
        app:layout_constraintTop_toBottomOf="@id/voucher_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voucher_point_unit"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/voucher_point_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardmedium"
        android:text=" p"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/voucher_name"
        app:layout_constraintStart_toEndOf="@+id/voucher_point"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>