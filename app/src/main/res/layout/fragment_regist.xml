<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.Register1Fragment"
    android:background="@color/grayGray_1000">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="155dp"
        android:layout_marginStart="32dp"
        android:text="Sign up"
        android:textColor="@color/neonGreen"
        android:textSize="24sp"
        android:fontFamily="@font/pretendardsemibold"
        />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp"
        android:text="Getting ready to start kook! (1/2)"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/pretendardregular"
        android:drawablePadding="6dp"
        />
    <EditText
        android:id="@+id/input_user"
        android:layout_width="0dp"
        android:textCursorDrawable="@drawable/sp_cursor"
        android:backgroundTint="@color/underbar_color"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="58dp"
        android:drawableStart="@drawable/ic_user"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/description_text"
        android:hint="Nickname"
        android:singleLine="true"
        android:textColorHint="@color/grayGray_600"
        android:drawablePadding="6dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/input_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textCursorDrawable="@drawable/sp_cursor"
        android:backgroundTint="@color/underbar_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="58dp"
        android:drawableStart="@drawable/ic_mail"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/input_user"
        android:hint="example@email.com"
        android:drawablePadding="6dp"
        android:textColorHint="@color/grayGray_600"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textCursorDrawable="@drawable/sp_cursor"
        android:backgroundTint="@color/underbar_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="58dp"
        android:drawableStart="@drawable/ic_lock"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/input_mail"
        android:textColorHint="@color/grayGray_600"
        android:hint="password"
        android:drawablePadding="6dp"
        android:singleLine="true"
        android:inputType="textPassword"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="10dp">
    <TextView
        android:id="@+id/next_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next â†’"
        android:textColor="@color/neonGreen"
        android:background="@drawable/sp_chip_background"
        android:fontFamily="@font/pretendardmedium"
        android:paddingVertical="5dp"
        android:textSize="12sp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>